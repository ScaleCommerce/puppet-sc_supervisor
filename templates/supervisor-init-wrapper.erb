#!/bin/bash

PRG="$(basename "$0")"

case "$1" in
    start)
        supervisorctl start $PRG
                ;;
    stop)
        supervisorctl stop $PRG
                ;;
    restart)
                supervisorctl restart $PRG
                ;;
    reload)
                supervisorctl restart $PRG
                ;;
    status)
                supervisorctl status $PRG
        ;;
    *)
        echo "Usage: $NAME {start|stop|restart|status}" >&2
        exit 3
        ;;
esac